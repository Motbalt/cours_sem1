package exercice0;

public class De {
	private int nbFaces;
	private String nomDe="dédé";
	
	public De() {}
	
	public De(int nbFaces) {
		this.nbFaces=nbFaces;
	}
	
	public void setNomDe(String nomDe) {
		this.nomDe=nomDe;
	}
	public String getNomDe() {
		return nomDe;
	}
	public void setNbFaces(int nbFaces) {
		if (nbFaces >= 3 && nbFaces <= 120){
		this.nbFaces=nbFaces;
		}
		else {
			System.out.println("Veuillez entrer un nombre de face compris entre 3 et 120");
		}
	}
	public int getNbFaces() {
		return this.nbFaces;
	}
	public String getCarac() {
		String carac = "Le nom du dé est : " + nomDe + "Et il comporte : " +  nbFaces;
		return carac;

	}

}
